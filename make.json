{
	"$schema": "https://raw.githubusercontent.com/zheka2304/innercore-mod-toolchain/develop/toolchain/schemas/make.schema.json",
	"info": {
		"name": "ICSTD",
		"author": "Koshak_Mine",
		"version": "1.0",
		"description": "InnerCore Standard Library for modding using Java",
		"clientOnly": true,
		"icon": "mod_icon.png"
	},
	
	"resources": [],
	"sources": [
		{
			"source": "dev",
			"target": "main.js",
			"type": "main",
			"language": "typescript"
		},
		{
			"source": "launcher.js",
			"type": "launcher",
			"language": "javascript"
		},
		{
			"source": "libs/*",
			"type": "library",
			"language": "javascript"
		}
	],
	"declarations": [
		"declarations/energy-net.d.ts",
		"declarations/StorageInterface.d.ts"
	],
	"compile": [
		{
			"source": "java",
			"type": "java"
		}
	],
	"additional": [
		{
			"source": "config.json",
			"targetDir": "."
		},
		{
			"source": "icstd.json",
			"targetDir": "."
		},
		{
			"source": "dependency-config.json",
			"targetDir": "."
		}
	]
}
