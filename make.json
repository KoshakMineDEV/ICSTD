{
	"$schema": "https://raw.githubusercontent.com/zheka2304/innercore-mod-toolchain/develop/toolchain/schemas/make.schema.json",
	"info": {
		"name": "ICSTD",
		"author": "Koshak_Mine",
		"version": "1.0",
		"description": "InnerCore Standard Library for modding using Java",
		"clientOnly": false
	},
	"resources": [
		{
			"path": "assets/res",
			"type": "resource_directory"
		},
		{
			"path": "assets/gui",
			"type": "gui"
		}
	],
	"java": {
		"configurable": true
	},
	"sources": [
		{
			"source": "dev",
			"target": "main.js",
			"type": "main",
			"language": "typescript"
		},
		{
			"source": "launcher.js",
			"type": "launcher",
			"language": "javascript"
		},
		{
			"source": "lib/*",
			"type": "library",
			"language": "javascript"
		}
	],
	"compile": [
		{
			"source": "java",
			"type": "java"
		}
	],
	"additional": [
		{
			"source": "assets/root/*",
			"targetDir": "."
		}
	]
}
